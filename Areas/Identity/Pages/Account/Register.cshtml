@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}
<script src="https://apis.google.com/js/platform.js" async defer></script>
<meta name="google-signin-client_id" content="151106634930-pqp0njfu98eo9gdugoglmhmjr790lcr5.apps.googleusercontent.com">
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Utwórz nowe konto.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form_settings form_settings extarea form_settings input">
                <input asp-for="Input.Email" id="email" class="form_settings form_settings extarea form_settings input" autocomplete="username" aria-required="true" />
                <label>Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form_settings form_settings extarea form_settings input">
                <input asp-for="Input.Password" class="form_settings form_settings extarea form_settings input" autocomplete="new-password" aria-required="true" />
                <label>Hasło</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form_settings form_settings extarea form_settings input">
                <input asp-for="Input.ConfirmPassword" class="form_settings form_settings extarea form_settings input" autocomplete="new-password" aria-required="true" />
                <label>Potwierdź hasło</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button class="button button4" type="submit">Zarejestruj</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Zaloguj się za pomocą innych serwisów.</h3>
            <hr />
            <p> <div class="g-signin2" data-onsuccess="onSignIn"></div></p>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
